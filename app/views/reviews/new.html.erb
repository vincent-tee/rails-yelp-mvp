 <%= render "nav" %>
<div class="container">
  <div class="row p-5">
  <h1 class="w-100 mb-4">Add a New Review</h1>
    <div class="col">
      <%= simple_form_for([@restaurant, @review]) do |f| %>
      <%= f.input :rating, collection: 0..5 %>
      <%= f.input :content %>
      <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
